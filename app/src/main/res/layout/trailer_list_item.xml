<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">

        <com.mindnotix.kmk.view.roundedimage.RoundedImageView
            android:id="@+id/imgTrailer"
            android:layout_width="105dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/slider_2"
            app:riv_corner_radius="@dimen/_5sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_toLeftOf="@+id/imgPlay"
            android:layout_toRightOf="@+id/imgTrailer"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:text="Jagame Thandhiram\nTrailer"
                android:textColor="@color/view_white"
                android:textSize="@dimen/_11ssp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/rubik_regular"
                android:includeFontPadding="false"
                android:text="May 15, 2021"
                android:textColor="@color/view_grey2"
                android:textSize="@dimen/_10ssp"  />


        </LinearLayout>

        <ImageView
            android:id="@+id/imgPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_light" />


    </RelativeLayout>
</layout>
