<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_dialog"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingTop="@dimen/_25sdp"
        android:paddingRight="@dimen/_15sdp"
        android:paddingBottom="@dimen/_30sdp"
        tools:context=".fragments.DownloadActionBottomFragment">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_40sdp"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:text="Squid Game S01E01"
                android:textColor="@color/view_grey2"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:text="30 mb"
                android:textColor="@color/view_grey2"
                android:textSize="@dimen/_11ssp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_list" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_regular"
                    android:includeFontPadding="false"
                    android:text="@string/see_all_episodes"
                    android:textColor="@color/view_white"
                    android:textSize="@dimen/_12ssp" />


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_marginLeft="@dimen/_minus3sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_14sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_regular"
                    android:includeFontPadding="false"

                    android:text="@string/delete_from_download"
                    android:textColor="@color/view_white"
                    android:textSize="@dimen/_12ssp" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</layout>
